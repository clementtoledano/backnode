{
    "compileOnSave": false,
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,

        "sourceMap": true,
        "typeRoots": ["node_modules/@types"],
        "lib": ["es2017", "es2016", "es2015", "dom"]
    },
    "include": ["./**/*.ts", "database/models/index.js"],
    "exclude": ["node_modules"]
}
